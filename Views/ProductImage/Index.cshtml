@model IEnumerable<Lab3.Models.ProductImage>

@{
    ViewData["Title"] = "Product Images";
}

<h1>Images for @ViewBag.ProductName</h1>

<p>
    <a asp-action="Create" asp-route-productId="@ViewBag.ProductId" class="btn btn-primary">Add New Image</a>
    <a asp-controller="Product" asp-action="Details" asp-route-id="@ViewBag.ProductId" class="btn btn-secondary">Back to Product</a>
</p>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.ImageUrl" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p>No images available for this product.</p>
        </div>
    }
</div>

