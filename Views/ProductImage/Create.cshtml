@{
    ViewData["Title"] = "Add Product Image";
}

<h1>Add Product Image</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-route-productId="@ViewBag.ProductId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label class="control-label">Image</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" required />
                <small class="text-muted">Select an image file (JPG, PNG, etc.)</small>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Upload" class="btn btn-primary" />
                <a asp-action="Index" asp-route-productId="@ViewBag.ProductId" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

